<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:id="@+id/linear_layout_fragment_message_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:tag="port_message_content"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/text_fragment_message_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="15dp"
            android:textColor="#0000FF"
            android:textSize="16sp"
            android:text="Message"
            />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/linear_texting_fragment_message_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:tag="port_step_detail"
        android:padding="16dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Type here"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>